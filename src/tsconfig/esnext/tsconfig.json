{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "target": "ESNext",
        "types": ["react", "node"],
        "typeRoots": [
            "../../../node_modules/@types",
            "../../../node_modules/@arpadroid/arpadroid/node_modules/@types"
        ],
        "jsx": "react"
        /**
         * @warning: props rootDir and outdir must be overriden in the project's tsconfig.json in order to take effect.
            "rootDir": "./src",
            "outDir": "./.tmp/.types"
         */
        // "noImplicitAny": true,
        // "incremental": true,
        // "tsBuildInfoFile": "./.tsbuildinfo",
        // "composite": true,
    },
    "include": ["src/index.js", "src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
