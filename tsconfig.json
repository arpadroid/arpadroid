{
    "compilerOptions": {
        "resolveJsonModule": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "outDir": "dist/@types",
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        // "noImplicitAny": true,
        "types": ["react", "node"],
        "typeRoots": ["./node_modules/@types", "./node_modules/@arpadroid/arpadroid/node_modules/@types"],
        "jsx": "react",
        "incremental": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
