{
    "compilerOptions": {
        "resolveJsonModule": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "outDir": "dist/@types",
        "strict": true,
        "module": "ESNext",
        "target": "ESNext",
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "noImplicitAny": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
